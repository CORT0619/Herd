<div id="group_display" >
{{#each results}}
<h3 data-id="{{groupID}}" id="groupName">{{groupName}}{{driverUserName}}</h3>

<p class="groupHeaders">Description</p>
<p>{{groupDescription}}</p>


<p class="groupHeaders">Drivers</p>
<input type="submit" value="Become Driver" data-id="{{groupID}}" id="driver" class="btn btn-primary">
{{/each}}




{{#if isMemberInGroup}}

    <input type="submit" value="Leave" data-groupId="{{groupID}}" id="leave" class="btn btn-primary">
    <input type="submit" value="Join" data-groupId="{{groupID}}" id="join" class="btn btn-primary">


{{else}}
   <input type="submit" value="Leave" data-groupId="{{groupID}}" id="leave" class="btn btn-primary">
  <input type="submit" value="Join" data-groupId="{{groupID}}" id="join" class="btn btn-primary">

{{/if}} 

<!--driver-->
	<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id="driverModal"  data-backdrop="static">
		<div class="modal-dialog modal-sm">
    		<div class="modal-content">
    			  <div class="modal-header">
      				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      				<h1 class="modal-title">Become a Driver</h1>
      			</div>
      			<div class="modal-body">
        			<form id="driverForm" method="post" action="/driver">
  						<div class="form-group">
    						<label for="seats">Seats available</label>
    						<input type="text" class="form-control" id="seats"  required>
 						  </div>
  						<div class="form-group">
    						<label for="info">Details</label>
    						<input type="text" class="form-control" id="info"   required>
  						</div>
  						<input type="submit" class="btn btn-default" id="driverSubmit">
              </form>
      			</div>

			</div>
  		</div>
	</div><!--end driver modal-->